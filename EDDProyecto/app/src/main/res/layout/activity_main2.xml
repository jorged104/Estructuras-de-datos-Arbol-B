<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.jorge.eddproyecto.MainActivity2">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cargar Qr"
        android:id="@+id/qr"
        android:layout_above="@+id/botonmostrar"
        android:layout_alignRight="@+id/botonmostrar"
        android:layout_alignEnd="@+id/botonmostrar" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/qr"
        android:id="@+id/frameLayout">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/imageView2"
            android:layout_gravity="left|top" />

    </FrameLayout>

    <Spinner
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/spinner2"
        android:layout_below="@+id/frameLayout"
        android:layout_toRightOf="@+id/qr"
        android:layout_toEndOf="@+id/qr" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cargar Avl"
        android:id="@+id/botonmostrar"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ArbolB"
        android:id="@+id/arb"
        android:layout_below="@+id/qr"
        android:layout_alignLeft="@+id/spinner2"
        android:layout_alignStart="@+id/spinner2" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="hash"
        android:id="@+id/bhash"
        android:layout_below="@+id/qr"
        android:layout_toRightOf="@+id/arb"
        android:layout_toEndOf="@+id/arb" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="66dp"
        android:layout_height="wrap_content"
        android:text="Mas"
        android:id="@+id/bt_mas"
        android:layout_gravity="center"
        android:layout_below="@+id/qr"
        android:layout_toRightOf="@+id/bhash"
        android:layout_toEndOf="@+id/bhash" />

</RelativeLayout>
